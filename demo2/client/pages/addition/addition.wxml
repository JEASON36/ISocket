<view class="container">
  <!-- <view class="login-icon">
    <image class="login-img" src="../../image/loginLog.png"></image>
  </view> -->

  <view class="login-from">
 
    <!--名称-->
    <view class="inputView">
      <image class="nameImage" src="../../image/name.png"></image>
      <label class="loginLab">名称</label>
      <input class="inputText" placeholder="请输入插座名称" bindinput="phoneInput" />
    </view>
    <view class="line"></view>
 
    <!--品牌-->
    <view class="inputView">
      <image class="keyImage" src="../../image/brand.png"></image>
      <label class="loginLab">品牌</label>
      <input class="inputText"  placeholder="请输入品牌" bindinput="passwordInput" />
    </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">添加</button>
    </view>
  </view>
</view>

